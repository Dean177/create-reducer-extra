{
  "name": "create-reducer-extra",
  "description": "Reduce boilerplate in your reducers",
  "author": "Dean Merchant <deanmerchant@gmail.com>",
  "keywords": [
    "boilerplate",
    "merge",
    "react",
    "reducer",
    "redux",
    "reset",
    "typescript",
    "useReducer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dean177/create-reducer-extra/issues"
  },
  "homepage": "https://github.com/Dean177/create-reducer-extra#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Dean177/create-reducer-extra.git"
  },
  "main": "dist/createReducerExtra.js",
  "types": "dist/createReducerExtra.d.ts",
  "dependencies": {},
  "peerDependencies": {
    "typescript": ">=3.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.9",
    "@types/react": "16.8.6",
    "@types/react-dom": "16.8.2",
    "codecov": "3.2.0",
    "husky": "1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "ts-jest": "^24.0.0",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/common-types.ts",
      "<rootDir>/src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "notify": true,
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "post-commit": [
        "git update-index -g"
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn prettify",
      "git add"
    ],
    "*.tsx": [
      "yarn lint",
      "yarn prettify",
      "git add"
    ]
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint --fix",
    "prettify": "prettier --parser typescript --write",
    "prepublish": "yarn build && yarn lint && yarn test",
    "report-coverage": "codecov",
    "start": "tsc --noEmit --pretty --watch",
    "test": "jest"
  },
  "version": "0.2.0"
}
