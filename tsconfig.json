    "declaration": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}